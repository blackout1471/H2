<UserControl x:Class="SortePerWpf.UserControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SortePerWpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             x:Name="PlayerControlName">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"
            Text="{Binding Path=PlayerName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, ElementName=PlayerControlName}" />

        <Canvas Grid.Row="1" Grid.Column="0" x:Name="CardCanvas">
        </Canvas>
    </Grid>
</UserControl>
